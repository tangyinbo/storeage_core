<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.cowboy.dao.PermissionMapper">
	<resultMap type="Permission" id="Permission">
		<id column="priv_id" property="privId" jdbcType="INTEGER"></id>
		<result column="permission" property="permission" jdbcType="VARCHAR"/>
		<result column="description" property="description" jdbcType="VARCHAR"/>
		<result column="stat" property="stat" jdbcType="VARCHAR"/>
	</resultMap>
	<sql id="base_priv">
		priv_id,<include refid="basin_priv"/>
	</sql>
	<sql id="basin_priv">
		permission,description,stat
	</sql>
	<insert id="createPermission" useGeneratedKeys="true" keyProperty="privId"  parameterType="Permission">
		insert into t_sys_priv(<include refid="basin_priv"/>) 
		values(#{permission},#{description},#{stat})
	</insert>
	
	<insert id="deletePermission" parameterType="int">
		delete from t_sys_priv  where priv_id=#{privId}
	</insert>
</mapper>