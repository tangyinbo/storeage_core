<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.cowboy.dao.UserMapper">
	<resultMap type="User" id="User">
		<id column="id" property="userId" jdbcType="INTEGER" />
		<result column="username" property="userName" jdbcType="VARCHAR" />
		<result column="password" property="password" jdbcType="VARCHAR" />
		<result column="salt" property="salt" jdbcType="VARCHAR" />
		<result column="stat" property="stat" jdbcType="VARCHAR" />
	</resultMap>
	<sql id="base_users">
		id,username,password,salt,stat
	</sql>
	<sql id="basin_users">
		username,password,salt,stat
	</sql>
	<select id="selectAllUser" resultMap="User">
		SELECT <include refid="base_users"/> FROM t_sys_users
	</select>
	
	<insert id="addUser" parameterType="User">
		insert into t_sys_users(<include refid="basin_users"/>)
		 values(
			#{userName},#{password},#{salt},#{stat}
		)
	</insert>
	
	<!-- 删除用户 -->
	<delete id="deleteUserById" parameterType="string">
		DELETE from t_sys_users u where u.id=#{userId}
	</delete>
	<delete id="deleteUserByUserName" parameterType="string">
		DELETE from t_sys_users u where u.username=#{userName}
	</delete>
	
	<!-- 锁定用户 -->
	<update id="lockUserById" parameterType="string">
		UPDATE t_sys_users u SET u.locked=0 where u.id = #{userId}
	</update>
	<update id="lockUserByUserName" parameterType="string">
		UPDATE t_sys_users u SET u.locked=0 where u.id = #{userName}
	</update>
	
	<!-- 获取用户 -->
	<select id="getUserByName" parameterType="string" resultMap="User">
		SELECT <include refid="base_users"/> FROM  t_sys_users u
		where u.username=#{userName}
	</select>
</mapper>