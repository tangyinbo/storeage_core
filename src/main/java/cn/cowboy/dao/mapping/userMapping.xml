<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.cowboy.dao.UserMapping">
	<resultMap type="cn.cowboy.domain.User" id="User">
		<id column="" property="" jdbcType="INTEGER" />
		<result column="User_id" property="userId" jdbcType="VARCHAR" />
		<result column="User_name" property="userName" jdbcType="VARCHAR" />
		<result column="Register_date" property="regDate"
			jdbcType="TIMESTAMP" />
		<result column="Passwd" property="Passwd" jdbcType="VARCHAR" />
		<result column="Name" property="Name" jdbcType="VARCHAR" />
		<result column="Phone" property="Phone" jdbcType="VARCHAR" />
		<result column="Email" property="Email" jdbcType="VARCHAR" />
		<result column="stat" property="stat" jdbcType="VARCHAR" />
	</resultMap>
	<sql id="basic">
		User_id,User_name,Register_date,Passwd,Name,Phone,Email,stat
	</sql>
	<sql id="basin">
		User_name,Register_date,Passwd,Name,Phone,Email,stat
	</sql>
	<select id="selectAllUser" resultMap="User">
		SELECT <include refid="basic"/> FROM users
	</select>
	
	<insert id="addUser" parameterType="cn.cowboy.domain.User">
		insert into users(<include refid="basin"/>)
		 values(
			#{userName},#{regDate},#{Passwd},#{Name},#{Phone},#{Email},#{stat}
		)
	</insert>
</mapper>